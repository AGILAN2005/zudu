FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Install system deps required by some packages (faiss, numpy, etc.)
RUN apt-get update \
    && apt-get install -y --no-install-recommends build-essential git libomp-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt /app/requirements.txt
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r /app/requirements.txt

# Copy application code
COPY . /app

ENV VECTOR_STORE_PATH=/app/vector_store

EXPOSE 8000

# Run using uvicorn (production-friendly -- no auto-reload)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
